<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edite Your Listing</h3>
    <form action="/listings/<%= listings._id %>?_method=PUT" method="post" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listings.title %>" class="form-control" required>
            <div class="invalid-feedback">Enter Title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" rows="3" cols="50" class="form-control" required> <%= listings.description %></textarea>
            <div class="invalid-feedback">Enter Short Description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" name="listing[image]" value="<%= listings.image %>" class="form-control" required>
            <div class="invalid-feedback">Enter Image URL</div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" value="<%= listings.price %>" class="form-control" required>
            <div class="invalid-feedback">Enter Price</div> 
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%= listings.country %>" class="form-control" required>
            <div class="invalid-feedback">Enter Country Name</div>
        </div>
    </div>
        <div>
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listings.location %>" class="form-control" required>
            <div class="invalid-feedback">Enter Description</div>
        </div>
            <button class="btn btn-dark edit-btn mt-3"> submit</button>
        
  </form>
</div>
</div>